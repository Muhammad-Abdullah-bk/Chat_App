<div class="row">
  <div class="col-9">
    <ul id="conversations-list">
      <% @chats.each do |chat| %>
        <%= render 'chats/chats', chat: chat, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.username, chats_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
      <div class="panel-heading">
        <h3 class="panel-title">Group Chats</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li><%= link_to new_group_chat_path, class: 'btn btn-primary' do %>
              New Group
            <% end %></li>
          <div class="d-flex justify-content-between">
          <% GroupChat.all.each do |group| %>
            <li><%= link_to group.name,group, remote: true %></li>
          <% end %>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>
