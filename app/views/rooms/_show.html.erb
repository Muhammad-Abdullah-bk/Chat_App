<h1>
    <%= @room.name %>
</h1>

  <div class="row">
    <div class="col-12 col-md-3">
      <%= render partial: 'rooms/rooms' %>
    </div>

    <div class="col">
      <div class="chat">
        <% render "rooms/rom" %>
              </div>
            </div>




      <%= simple_form_for room_message, remote: true do |form| %>
        <div class="input-group mb-3">
          <%= form.input :message, as: :string,
                         wrapper: false,
                         label: false,
                         input_html: {
                           class: 'chats-input'
                         } %>
          <div class="input-group-append">
            <%= form.submit "Send", class: 'btn btn-primary chats-input' %>
          </div>
        </div>

        <%= form.input :room_id, as: :hidden %>
      <% end %>
    </div>
  </div>
