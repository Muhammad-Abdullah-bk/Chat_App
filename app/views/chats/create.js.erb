var chats = $('#conversations-list');
var chat = chats.find("[data-conversation-id='" + "<%= @chat.id %>" + "']");

if (chat.length !== 1) {
    chats.append("<%= j render partial: 'chats/chats',locals: { chat: @chat, user: current_user} %>");
    chat = chats.find("[data-conversation-id='" + "<%= @chat.id %>" + "']");
}

